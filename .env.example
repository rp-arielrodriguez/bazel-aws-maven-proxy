# AWS Configuration
AWS_PROFILE=default
AWS_REGION=sa-east-1

# S3 Bucket Information
S3_BUCKET_NAME=maven.recargapay.com

# Proxy Configuration
PROXY_PORT=8888
REFRESH_INTERVAL=30000
LOG_LEVEL=info  # Options: debug, info, warn, error

# AWS SSO Configuration (for auto-refresh)
# IMPORTANT: Auto-refresh requires sso-session configured in ~/.aws/config
#
# Your ~/.aws/config must include:
#   [profile YOUR_PROFILE]
#   sso_session = my-sso
#   sso_account_id = YOUR_ACCOUNT_ID
#   sso_role_name = YOUR_ROLE_NAME
#
#   [sso-session my-sso]
#   sso_region = YOUR_REGION
#   sso_start_url = https://YOUR_SSO_PORTAL.awsapps.com/start
#   sso_registration_scopes = sso:account:access
#
# Required scope: sso:account:access (enables token refresh)
# See: examples/aws_config_example for complete setup
# Validate: ./validate_sso_setup.sh YOUR_PROFILE
